<section class="blog">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="row">
                        {{#each news}}
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="/images/news/{{this/image}}" alt="{{this/image}}">
                                </div>
                                <div class="blog__item__text">
                                    <ul>
                                        <li><i class="fa fa-calendar-o"></i> {{this.time}}</li>
                                    </ul>
                                    <h5><a href="/bai-viet/{{this.slug}}">{{this.title}}</a></h5>
                                    <a href="/bai-viet/{{this.slug}}" class="blog__btn">Đọc bài viết<span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{#if number}}
                        <div class="col-lg-12">
                            <div class="product__pagination blog__pagination">
                                {{#if pageNumber.before}}
                                 <a href="/tin-tuc/{{pageNumber.linkBefore}}">←</a>
                                {{/if}}
                                {{#each pageNumber.list}}
                                    <a href="/tin-tuc/{{this.link}}" 
                                    {{#if this.active}}
                                    class="active"
                                    {{/if}}
                                    >{{this.number}}</a>
                                {{/each}}
                                {{#if pageNumber.after}}
                                 <a href="/tin-tuc/{{pageNumber.linkAfter}}">→</a>
                                {{/if}}
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </section>