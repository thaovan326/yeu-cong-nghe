    <script>
    function addSubscriber(event){
        event.preventDefault();
        var email = document.getElementById("email-sb");

        var settings = {
                "url": "/api/add-subscriber",
                "method": "POST",
                "timeout": 0,
                "headers": {
                    "Content-Type": "application/json",
                },
                "data": JSON.stringify({
                    "email": email.value,
                }),
            };

            $.ajax(settings).done(function (response) {
                var icon = response.code == 401 ? "warning" : "success";
                Swal.fire({
                    title:response.message,
                    icon:icon
                })
                if(response.code !=401) {
                    email.value = "";
                }
            });
    }

</script>
